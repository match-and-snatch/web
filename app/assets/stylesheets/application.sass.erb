$deepest_depth: 1000 // Z-Index start for elements displaying on top of others
$center_width: 970px
$border_radius: 10px
$fill_color: #f7f7f7

@import "mixins/**/*"
@import "pages/**/*"

body 
  background: $fill_color
  color: #464646
  font-family: 'Open Sans', sans-serif
  font-size: 13px
a 
  border: none

.cf
  &:before, &:after
    content: " "
    display: table
  &:after
    clear: both
  *zoom: 1  

.btn
  @include border-radius($border_radius)
  color: #FFFFFF
  text-align: center
  &.pink
    @include pink-area
  &.blue
    @include blue-area
  &.black
    @include box-shadow(inset 0 1px 0 0 #6f6f6f)
    @include linear-gradient(#3e3e3e, #2d2d2d)
    border: 1px solid #464646
    text-shadow: -1px -1px 0 #1c1c1c
  &:hover
    &.pink
      @include linear-gradient(#ea2f49, #ea4e65)
    &.blue
      @include linear-gradient(#359acd, #7dd3f3)
    &.black
      @include linear-gradient(#2d2d2d, #3e3e3e)

nav 
  @include linear-gradient(#7dd3f3, #359acd)
  height: 45px
  border-top: 1px solid #c5ecff
  border-bottom: 1px solid #277aa3
  display: block
  position: fixed
  top: 0
  width: 100%
  z-index: $deepest_depth
  .wrapper
    width: $center_width - 2*$border_radius
    margin: 0 auto
    .logo
      display: block
      float: left
      height: 31px
      margin-top: 6px
      width: 191px
      img 
        height: 31px
        width: 191px
    .buttons 
      float: right
      a 
        text-decoration: none
      .btn 
        float: right
        height: 22px
        margin-top: 5px
        padding-top: 8px
        &.signup
          width: 85px
        &.login
          margin-left: 10px
          width: 70px

#header_container
  @include border-radius($border_radius)
  background: #ffffff 
  border: 1px solid #d7d7d7
  display: block
  margin: 0 auto
  overflow: hidden
  padding-bottom: 15px
  position: relative
  width: $center_width
  .cover_photo
    background: image-url('cover-default.png') no-repeat
    display: block
    height: 280px
  .profile_photo
    background-color: $fill_color
    border: 1px solid #d7d7d7
    position: absolute
    top: 80px
    left: 15px
    height: 250px
    width: 250px
  .details_container 
    position: relative
    .profile_name 
      margin: 86px 0 0 15px
      font-weight: 600
      font-size: 2.67em
    .subscribe_container
      position: absolute
      right: 15px
      top: -39px
      text-align: center
      font-size: 3em
      font-weight: 700
      a 
        text-decoration: none
      .subscribe_cost
        display: block
        height: 70px
        width: 265px 
        .sign
          @include pink-area
          @include border-radius($border_radius 0 0 10px)
          color: #FFFFFF
          float: left
          height: 55px
          padding-top: 15px
          width: 65px
        .amount
          @include border-radius(0 $border_radius $border_radius 0)
          background-color: $fill_color
          border-top: 1px solid #d7d7d7
          border-right: 1px solid #d7d7d7
          border-bottom: 1px solid #d7d7d7
          color: #ea2e49
          float: right
          height: 55px
          padding-top: 15px
          width: 197px
      .subscribe
        @include border-radius($border_radius)
        display: none
        color: #FFFFFF
        height: 70px
        width: 263px 
        height: 55px
        padding-top: 15px
        @include blue-area
      &:hover
        .subscribe_cost 
          display: none
        .subscribe
          display: block
.js-highlight
  border: 2px solid red
  display: visible

#overlay
  z-index: $deepest_depth + 10000
  display: none
  top: 0
  right: 0
  left: 0
  bottom: 0
  background: black
  position: fixed
  opacity: 0.6

#content
  width: $center_width
  margin: 0 auto
  margin-top: 75px

.popup
  @include border-radius($border_radius)
  z-index: $deepest_depth + 10001
  display: none
  position: fixed
  background: white
  min-width: 200px
  min-height: 50px
  top: 50%
  left: 50%
  border: 5px solid black
  padding: 5px

  .close_button
    top: 3px
    right: 3px
    font-size: 10pt
    cursor: pointer
    color: red
    position: absolute

.error
  color: red
  font-size: 10px
  display: none

label
  display: inline-block
  width: 100px
  font-size: 12px
  color: gray

.left_column
  width: 200px
  float: left
  padding-right: 10px

.right_column
  float: left
  padding: 5px

.up
  height: 10px
  width: 100%
  clear: both

.below
  font-size: 12px
  padding-top: 10px

.Posts
  width: 500px
  padding: 10px
  margin-top: 10px
  background: #f6f3fa

  .post
    background: #faffc9
    border-top: 1px solid crimson
    padding: 10px
    margin-top: 5px

    .date
      font-weight: bold
      color: gray
      font-size: 10px

    .message
      font-size: 14px
      padding-top: 5px


ul.dashboard_menu
  border-radius: $border_radius
  background: #faffc9
  width: 200px

  li
    clear: both
    padding: 5px

    a
      color: black
      text-align: center
      padding-top: 10px
      border-radius: $border_radius
      height: 40px
      width: 100%
      display: block
      &.active
        color: white
        background: crimson

.pending
  opacity: 0.3

.Comments
  margin-left: 20px
  width: 420px
  padding: 10px
  margin-top: 10px
  background: #c6c5ca

  .comment
    background: #d9dfb0
    border-top: 1px solid #8f0c27
    padding: 10px
    margin-top: 5px

    .user
      font-weight: bold
      color: black
      font-size: 14px

    .date
      font-weight: bold
      color: gray
      font-size: 10px

    .message
      font-size: 14px
      padding-top: 5px
