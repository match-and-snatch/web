    td
      p style='color: #898989; font-family: Helvetica,Arial,sans-serif; font-size: 12px; line-height: 150%; padding: 0; margin: 0;webkit-text-size-adjust: none;' Subscription Cost
      p style='color: #464646; font-family: Helvetica,Arial,sans-serif; font-size: 16px; line-height: 120%; padding: 0; margin: 0;webkit-text-size-adjust: none;'
