.col-md-12
  h2 General Information

  form.PictureUploadForm action=update_profile_picture_user_path(current_user.object) method='post' data-target='profile-picture'
   .form-group
    label.pull-left Account Photo
    .account_photo.pull-right
      img src=current_user.profile_picture_url
      .change_button
        .btn.pink.i.fa.fa-picture-o
          |&nbsp;Change Photo
          input.file type='file' name='profile_picture_file'
        input type='hidden' name='slug' value=current_user.slug
    .clearfix

  form.Form action=update_general_information_account_info_path method='post'
    input type='hidden' name='_method' value='put'

    .form-group
      label.pull-left Account Full Name
      input.form-control.pull-right type='text' name='full_name' value=@user.full_name
      .clearfix
      .error data-field='full_name'

    .form-group
      label.pull-left Email Address
      input.form-control.pull-right type='email' name='email' value=@user.email
      .clearfix
      .error data-field='email'

    .form-group
      label.pull-left Company/Organization
      input.form-control.pull-right type='text' name='company_name' value=@user.company_name
      .clearfix
      .error data-field='company_name'

    input.btn.pink.pull-right type='submit' value='Update Information'
    .clearfix

  hr

  h2 Change Password

  form.Form action=change_password_account_info_path method='post'
    input type='hidden' name='_method' value='put'

    .form-group
      label.pull-left Current Password
      input.form-control.pull-right.password type='password' name='current_password' value=''
      .clearfix
      .error data-field='current_password'

    .form-group
      label.pull-left New Password
      input.form-control.pull-right.password type='password' name='new_password' value=''
      .clearfix
      .error data-field='new_password'

    .form-group
      label.pull-left Re-type Password
      input.form-control.pull-right.password type='password' name='new_password_confirmation' value=''
      .clearfix
      .error data-field='new_password_confirmation'

    input.btn.pink.pull-right type='submit' data-wait_text='Please, wait...' value='Change Your Password' style="margin-bottom: 15px"
    .clearfix
