form.Form action=update_cc_data_account_info_path method='post'
  input type='hidden' name='_method' value='put'
  .form-group.cc_row
    label.pull-left 
      |Card Number
      ul 
        li
          img src=image_path('https://buddy-assets.s3.amazonaws.com/images/Visa@2x.png')
        li
          img src=image_path('https://buddy-assets.s3.amazonaws.com/images/Mastercard@2x.png')
        li
          img src=image_path('https://buddy-assets.s3.amazonaws.com/images/Amex@2x.png')
        li
          img src=image_path('https://buddy-assets.s3.amazonaws.com/images/Discover@2x.png')
    input.form-control.pull-right type='text' name='number' placeholder='1234 5678 9012 3456'
    .clearfix
    .error data-field='number'

  .form-group
    label.pull-left Expiry Date
    .pull-right style="width: 434px"

      input.form-control.pull-left type='text' name='expiry_month' placeholder='01' style="width: 50px;"
      label.pull-left style="width: 80px; text-align: left; padding-left: 10px;" Month

      input.form-control.pull-left type='text' name='expiry_year' placeholder='15' style="width: 50px;"
      label.pull-left style="width: 60px; text-align: left; padding-left: 10px;" Year

    .clearfix
    .error data-field='expiry_date'

  .form-group
    label.pull-left CVC Code
    input.form-control.pull-left type='text' name='cvc' placeholder='123' style="width: 55px; margin-left: 15px"
    .clearfix
    .error data-field='cvc'

  input.btn.pink.pull-right type='submit' value='Update Credit Card Information'
  .clearfix
