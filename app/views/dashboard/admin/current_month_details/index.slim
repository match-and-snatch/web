h2
  strong Current Month Details

.table-responsive
  table.table.table-striped
    tr
      th
        strong Day
      th
        strong Pending Payments
      th
        strong Delayed Payments
      th
        strong Failed Payments
      th
        strong Success Payments

    - @current_month.each_day do |day|
      tr class="#{'current-day' if day.current_day?}"
        td
          strong
            a.AjaxLink href=pending_admin_user_payments_path(@current_month.user.id, date: day.date) = day.name
        td
          = day.pending_payments_count
        td
          = day.delayed_payments_count
        td
          = day.failed_payments_count
        td
          = day.success_payments_count

    tr
      td
        strong Total
      td
        = @current_month.total_pending_payments_count
      td
        = @current_month.total_delayed_payments_count
      td
        = @current_month.total_failed_payments_count
      td
        = @current_month.total_success_payments_count
