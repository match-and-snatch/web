- if @users.any?
  br
  .list-group-item-heading Search results
  ul.list-group
    - @users.each do |user|
      li.list-group-item
        .pull-left
          span= user.full_name
          | &nbsp;
          strong= user.email
        - if user.admin?
          button.AjaxFormLink.btn.btn-warning.pull-right data-_method='put' href=drop_admin_admin_user_path(user.id) Drop Admin
        - else
          button.AjaxFormLink.btn.pink.pull-right data-_method='put' href=make_admin_admin_user_path(user.id) Make Admin
          - if user.sales?
            button.AjaxFormLink.btn.btn-warning.pull-right data-_method='put' href=drop_sales_admin_user_path(user.id) Drop Sales
          - else
            button.AjaxFormLink.btn.pink.pull-right data-_method='put' href=make_sales_admin_user_path(user.id) Make Sales
        .clearfix
  .clearfix
- else
  - if params[:q].present?
    p.bg-danger
      |No results for "
      strong=params[:q]
      |"
