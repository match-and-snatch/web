- if @users.any?
  .search_user_results
    .list-group-item-heading
      |Search results for "
      strong=params[:q]
      |"
    ul.list-group
      - @users.each do |user|
        li.list-group-item
          a href=profile_path(user.slug)
            .pull-left
              img src=user.small_profile_picture_url width=50 height=50
            .pull-left= super_highlight(user.profile_name)
            - if current_user == user
              small.pull-right.text-muted You
            .clearfix
        
- else
  - if params[:q].present?
    p.bg-danger
      |No results for "
      strong=params[:q]
      |"