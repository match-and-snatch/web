- content_for :head do
  = render 'meta'

.container
  #header.box
    .photo_cover
      - if @profile.cover_picture_url.present?
        div data-identifier='cover-photo' style='background: url(#{@profile.cover_picture_url}); width: 100%; height: 100%'
        .BackgroundScroller data-target='cover-photo' data-position=@profile.cover_picture_position_perc
    .photo_profile
      - if @profile.profile_picture_url.present?
        img src=@profile.profile_picture_url
    - if can? :login_as, @profile.object
      a.admin_login.AjaxFormLink href=login_as_user_path(@profile.object.id) data-_method='post' Login as this User
      .clearfix
    .details_container
      .profile_details_l
        .profile_name
          h1= @profile.profile_name
        .clearfix
        .profile_type
          h3= @profile.types
      .profile_details_r
        a href="#{account_info_url(anchor: '/account_info/billing_information')}"
          .cost_container
            .visitor.failed_billing
              .amount Update Billing Information
              .red-icon.fa.fa-usd
      .clearfix
      - if @profile.benefits.any?
        .benefits_container
          .label.btn Subscriber Benefits
          .benefits-list data-identifier='benefits'= render 'benefits/list', benefits: @profile.benefits
  #visitor.box
    .row
      .col-md-12.col-sm-12.col-xs-12
        .title Please fix your billing details to see #{@profile.profile_name.possessive} profile page
        span.tagline We encountered a problem with your credit card.
        span.sub_heading
          ' In order to fix this, please update your credit card information
          a href="#{account_info_url(anchor: '/account_info/billing_information')}" here
          ' .
        = render 'adult_content_warning' if @profile.has_mature_content?
