doctype XML
rss version="2.0" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd"
  channel
    title= @post.title
    link= profile_url(@post.user)
    language en-us
    copyright Â© 2014 Andy Dean Inc.
    itunes:subtitle America Now podcast
    itunes:author= @post.user.name
    itunes:summary= @post.message
    description= @post.message
    itunes:owner
      itunes:name= @post.user.name
      itunes:email= @post.user.email
    itunes:image href=@post.user.profile_picture_url.gsub('https', 'http') /
    itunes:category text="News & Politics"
    - @uploads.each do |upload|
      item
        title= upload.filename
        itunes:author= @post.user.name
        itunes:subtitle= @post.message
        itunes:summary= @post.message
        itunes:image href=@post.user.profile_picture_url.gsub('https', 'http') /
        enclosure length="#{upload.transloadit_data[:results][':original'][0]['size']}" type="#{upload.transloadit_data[:results][':original'][0]['mime']}" url="http://#{upload.transloadit_data[:results][':original'][0]['url']}" /
        pubDate= @post.created_at.rfc2822
        itunes:duration= upload.duration.to_i
